//AdditionGui3.1 for chapter 3 page 95
// Obtaining two integers through the dialog box and outputting the sum
import javax.swing.JOptionPane;

public class AdditionGui3_1 
{
	public static void main( String[] args)
	{
		//prompt the user to enter first number
		String number1 =
				JOptionPane.showInputDialog("Input first Digit");
		//prompt the user to enter second number
		String number2=
				JOptionPane.showInputDialog("Input Second Digit");
		
		//now we convert the string to integer
		int firstNumber = Integer.parseInt(number1);
		int secondNumber = Integer.parseInt(number2);
		
		int sum;
		
		//Add the two numbers and set the result to the variable sum
		sum = firstNumber + secondNumber;
		
		//create the message
		String message = 
				String.format("The Addition of \nfirst Digit: %d\nSecond Digit: %d\nEquals = %d\n",
						firstNumber, secondNumber, sum);
		
		//display the message of the output
		JOptionPane.showMessageDialog(null, message);
	} // end main
} // end class NameDialog
